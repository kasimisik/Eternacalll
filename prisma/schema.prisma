generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Bu satır Replit Secrets'taki şifreyi okur
}

// Kullanıcılarımızı saklayacağımız tablo
model User {
  id          String    @id @default(cuid())
  clerkUserId String    @unique
  email       String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}