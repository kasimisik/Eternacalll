generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Bu satır Replit Secrets'taki şifreyi okur
}

// Kullanıcılarımızı saklayacağımız tablo
model User {
  id          String    @id @default(cuid())
  clerkUserId String    @unique
  email       String
  subscription String   @default("Free")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  agents      Agent[]
}

// AI Agent'ları saklayacağımız tablo
model Agent {
  id                 String   @id @default(cuid())
  userId             String   // Clerk user ID
  name               String
  prompt             String
  elevenlabsAgentId  String   @unique
  voiceId            String
  stability          Float    @default(0.7)
  similarityBoost    Float    @default(0.8)
  language           String   @default("tr")
  firstMessage       String   @default("Merhaba! Size nasıl yardımcı olabilirim?")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [clerkUserId])
}